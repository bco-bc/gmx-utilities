define      = -DFLEXIBLE
title 	    = minimization
; Run control
integrator  = steep
emtol       = 500.0
emstep      = 0.01
nsteps      = 50000

; Neighborsearching
nstlist		= 1
cutoff-scheme   = Verlet
ns_type		= grid	
rlist 		= 1.4

; Van der Waals
rvdw		    = 1.4

; Electrostatics
coulombtype	    = PME
rcoulomb	    = 1.4

; Periodic boundary conditions
pbc		= xyz	